@page "/grading"

<PageTitle>Grading</PageTitle>

<div class="text-center flex-column">
    <h1 class="employee-name">Grading</h1>
</div>
<form id="gradingForm">
    @{
        var questions = new List<QuestionModel> {
    new QuestionModel { Title = "Cleanliness" },
    new QuestionModel { Title = "Tidiness" },
    new QuestionModel { Title = "Decoration" }
    };

        for (int i = 0; i < questions.Count; i++)
        {
            <details class="question mb-3" open>
                <summary>Question @(i + 1): @questions[i].Title</summary>
                <div class="slider-container">
                    <input type="range" min="1" max="4" value="2" class="slider form-control" id="q@(i+1)">
                    <div class="slider-labels">
                        <span>Bad 😒</span>
                        <span>Okay 👍</span>
                        <span>Good 👌</span>
                        <span>Perfecto! ✨</span>
                    </div>
                </div>
            </details>
        }
    }
</form>
<div class="mb-3 d-grid gap-2">
    <button type="submit" class="btn btn-primary submit-btn">Submit</button>
</div>