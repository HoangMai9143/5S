@page "/question"

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Desk Grading</title>

</head>

<body>
    <h1>Employee Desk Grading</h1>
    <div class="employee-name">Current employee: <span id="employeeName">Hoang Mai</span></div>

    <form id="gradingForm">
        <!-- Question 1: Cleanliness -->
        <details class="question">
            <summary>Question 1: Cleanliness</summary>
            <div class="options">
                <div><input type="radio" name="q1" value="bad" id="q1-bad"><label for="q1-bad">1. Bad</label></div>
                <div><input type="radio" name="q1" value="okay" id="q1-okay"><label for="q1-okay">2. Okay</label></div>
                <div><input type="radio" name="q1" value="good" id="q1-good"><label for="q1-good">3. Good</label></div>
                <div><input type="radio" name="q1" value="very-good" id="q1-very-good"><label for="q1-very-good">4. Perfect!</label></div>
            </div>
        </details>

        <!-- Question 2: Tidiness -->
        <details class="question">
            <summary>Question 2: Tidiness</summary>
            <div class="options">
                <div><input type="radio" name="q1" value="bad" id="q1-bad"><label for="q1-bad">1. Bad</label></div>
                <div><input type="radio" name="q1" value="okay" id="q1-okay"><label for="q1-okay">2. Okay</label></div>
                <div><input type="radio" name="q1" value="good" id="q1-good"><label for="q1-good">3. Good</label></div>
                <div><input type="radio" name="q1" value="very-good" id="q1-very-good"><label for="q1-very-good">4. Perfect!</label></div>
            </div>
        </details>

        <!-- Question 3: Decoration -->
        <details class="question">
            <summary>Question 3: Decoration</summary>
            <div class="options">
                <div><input type="radio" name="q1" value="bad" id="q1-bad"><label for="q1-bad">1. Bad</label></div>
                <div><input type="radio" name="q1" value="okay" id="q1-okay"><label for="q1-okay">2. Okay</label></div>
                <div><input type="radio" name="q1" value="good" id="q1-good"><label for="q1-good">3. Good</label></div>
                <div><input type="radio" name="q1" value="very-good" id="q1-very-good"><label for="q1-very-good">4. Perfect!</label></div>
            </div>
        </details>
    </form>
    <button type="submit" class="submit-btn">Submit</button>
</body>

</html>