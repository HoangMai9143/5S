@page "/question"
@using DC.Models
@using MudBlazor

@inject AppDbContext appDbContext
@inject IDialogService dialogService

@rendermode InteractiveServer

<PageTitle>Questions</PageTitle>

<EditForm Model="@this" OnValidSubmit="@InsertQuestion">
    <DataAnnotationsValidator />
    <MudGrid Spacing="3" Justify="Justify.Center">
        <MudItem xs="6">
            <MudTextField @bind-Value=" newQuestionText" T="string" Label="New Question" HelperText="Click the button to Add" HelperTextOnFocus="true" Variant="Variant.Outlined" FullWidth="true" />
        </MudItem>
        <MudItem xs="3">
            <MudButton Variant="Variant.Filled" Size="Size.Medium" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary" OnClick="@(() => InsertQuestion())">Add</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>

<style>
    .custom-mudtable .mud-table-container {
        overflow-y: unset !important;
    }

    .mud-grid-item-xs-3 {
        flex-grow: 0;
        align-content: space-around;
        padding-bottom: 15px;
    }
</style>

<MudDataGrid T="QuestionModel" Items="@questions" SortMode="SortMode.Multiple" QuickFilter="@_quickFilter" Hideable="true" RowClick="@RowClicked" RowContextMenuClick="RowRightClicked" SelectedItemsChanged="@SelectedItemsChanged" Dense="true" Elevation="0" Class="custom-mudtable no-scroll mt-4">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Questions</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="ID" InitialDirection="SortDirection.Descending" />
        <PropertyColumn Property="x => x.QuestionContext" Title="Question" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => OpenEditDialog(context.Item))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Secondary" Size="Size.Small" OnClick="@(() => DeleteQuestion(context.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
    <PagerContent>
        <MudDataGridPager T="QuestionModel" />
    </PagerContent>
</MudDataGrid>

<MudText Typo="Typo.body2">Questions in List: @questions.Count</MudText>