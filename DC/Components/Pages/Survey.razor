@page "/survey"
@rendermode InteractiveServer

<PageTitle>Survey</PageTitle>

<MudTabs Elevation="0" ApplyEffectsToContainer="true" PanelClass="pa-6" ActivePanelIndex="activeIndex" ActivePanelIndexChanged="HandleTabChanged">
  <MudTabPanel Text="Choose/Create Survey" Icon="@Icons.Material.Filled.EventNote">
    <MudCard>
      <MudCardContent>
        <MudText Typo="Typo.h6">Choose/Create Survey</MudText>
        <MudText Typo="Typo.body2">Choose an existing survey or create a new one.</MudText>
      </MudCardContent>
      <MudCardActions>
        <MudStack Spacing="2" Row="true">
          <MudButton Color="Color.Primary" Variant="Variant.Filled">Create New Survey</MudButton>
          <MudButton Color="Color.Primary" Variant="Variant.Filled">Choose Existing Survey</MudButton>
        </MudStack>
      </MudCardActions>
    </MudCard>
  </MudTabPanel>
  <MudTabPanel Text="Choose Question" Icon="@Icons.Material.Filled.QuestionMark">
    <MudCard>
      <MudCardContent>
        <MudText Typo="Typo.h6">Choose Question</MudText>
        <MudText Typo="Typo.body2">Choose a question from the list below.</MudText>
      </MudCardContent>
      <MudCardActions>
        <MudStack Spacing="2" Row="true">
          <MudButton Color="Color.Primary" Variant="Variant.Filled">Choose Question</MudButton>
        </MudStack>
      </MudCardActions>
    </MudCard>
  </MudTabPanel>
</MudTabs>

@code {
  private int activeIndex = 0;

  private void HandleTabChanged(int index)
  {
    activeIndex = index;
  }
}